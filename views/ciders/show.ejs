<%- include('../partials/header') %>

<section id="show-page">
  <div>Brew Name: </div>
  <div><%= cider.brewName %></div>
  <div>Inception Date:</div>
  <div><%= cider.bDate %></div>
  <div>Due Date:</div>
  <div><%= cider.xDate %></div>
  <div>Organic: </div>
  <div><%= cider.organic ? 'Yes' : 'No' %></div>
  <div>Yeast:</div>
    <ul>
       <%- cider.brew.map(p => 
       `<li>${p.name}</li>`
         ).join('') %>
        </ul>
</section>

<form action="/ciders/<%= cider._id%>/yeasts" method="POST">
  <select name="yeastId">
    <%- yeasts.map(p => 
      `<option value="${p._id}">${p.name}</option>`
    ).join('') %>
  </select>
  <button type="submit">Add to Brew</button>
</form>

<br><br>
<h2>Reviews</h2>
<form id="add-review-form" method="POST" action="/ciders/<%= cider._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <input type="submit" value="Add Review">
</form>

<% if (cider.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% cider.reviews.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="2"></td>
        <td><strong><%= (total / cider.reviews.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>


</main>
</body>
</html>